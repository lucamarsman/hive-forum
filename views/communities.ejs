<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
  <title>Index</title>
  <link rel="stylesheet" type="text/css" href="/public/assets/homepage.css" title="style" />
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
</head>
<body>

<div class="wrapper">
    <header id="main-nav">
      <div id="brand">
        <img src="/public/assets/images/hive-logo.svg" id="logo">
        <img src="/public/assets/images/Hive.svg" id="brand-text">
      </div>
      <div class="search-nav">
        <form action="" id="searchForm" method="POST">
          <input type="text" id="search-bar" placeholder="Search Communities" name="search_val">
          <button type="submit" id="search-button" name="action" value="search">Go</button>
        </form>
      </div>
      <div id="button-container">
        <button id="btn1" onclick="window.location.href='/register'">Sign Up</button>
        <button id="btn2" onclick="window.location.href='/login'">Log In</button>
      </div>
    </header>

    <main id="main-content">
      <div id="communityContainer">
        <header class="communitiesHeader">
            <h3 id="community-section-header">Communities</h3>
            <div id="comm-sub-header">
              <div id="comm-sub-header-left">
                <h5 id="top-communities">Top Communities</h5>
                <h5 id="header-subtext">Browse Hive's largest communities</h5>
              </div>
              <a href="/community-create"><img src="/public/assets/images/plus-btn.svg" id="create-community"></a>
            </div>
        </header>
        <div id="community-list">

        </div>
      </div>

    </main>

  </div>
</body>

<script src="/public/loadCommunityList.js"></script>

</html>